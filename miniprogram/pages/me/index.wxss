/** “我”页整体样式与基础排版：与首页 header 保持统一的左右留白与顶部空间 */
.me-page {
  height: 100vh;
  padding: 0rpx 32rpx 0rpx 32rpx; /* 顶部留白交给 me-header，自身只负责左右与底部内边距 */
  box-sizing: border-box;
  background: radial-gradient(circle at 100% 0%, #fecaca 0, #22010a 40%) fixed;
  background-color: #22010a;
  color: #fee2e2;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/** 个人页头部容器：与首页 .header 一样在顶部预留导航栏高度 */
.me-header {
  padding-top: 100rpx; /* 顶部 100rpx，与首页 .header 保持一致的视觉起点 */
  margin-bottom: 40rpx; /* 头部与下方功能区域之间的垂直间距 */
}

/** 个人页标题样式：字号与粗细对齐首页 .title，营造统一标题风格 */
.me-title {
  font-size: 60rpx; /* 与首页标题相同的字号 */
  font-weight: 600; /* 半粗体，与首页标题保持一致 */
  letter-spacing: 4rpx; /* 稍大的字间距，延续赛博/仪式感 */
}

/** 个人页副标题样式：间距与首页 .subtitle 对齐，颜色略弱化 */
.me-subtitle {
  margin-top: 8rpx; /* 与首页副标题相同的上下间距 */
  font-size: 24rpx; /* 与首页副标题相同的字号 */
  color: #9ca3af; /* 使用与首页副标题相同的中性灰色，统一信息层级 */
}

.me-section {
  margin-top: 16rpx;
  /* 恢复 Flex 布局，因为 me-section 是 me-lists-wrapper 的父容器，它需要撑满剩余空间 */
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  min-height: 0;
}

.me-lists-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  min-height: 0;
}

.login-entry {
  margin-bottom: 40rpx;
}

.login-button {
  width: 100%;
  height: 88rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #b91c1c, #f97316);
  box-shadow: 0 20rpx 40rpx rgba(15, 23, 42, 0.6);
  color: #f9fafb;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.login-button:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.user-info-card {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(254, 202, 202, 0.2);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  backdrop-filter: blur(10px);
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #b91c1c, #f97316);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.avatar-placeholder text {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-nick {
  font-size: 36rpx;
  font-weight: 600;
  color: #fed7aa;
  margin-bottom: 8rpx;
}

.user-account {
  font-size: 24rpx;
  color: #9ca3af;
  font-family: monospace;
}

.me-item {
  margin-bottom: 24rpx;
  padding: 24rpx 24rpx 20rpx;
  border-radius: 24rpx;
  /* background: rgba(255, 62, 62, 0.651); */
  background: linear-gradient(45deg, rgba(255, 62, 62, 0.8), rgba(246, 246, 246, 0.5));
}

.me-item-title {
  font-size: 36rpx;
  font-weight: 500;
  flex: 1;
  color: #fed7aa;
}

.me-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.arrow {
  font-size: 24rpx;
  color: #fecaca;
  transition: transform 0.3s;
}

.arrow-up {
  transform: rotate(180deg);
}

.my-blessings-container {
  margin-top: -12rpx;
  margin-bottom: 24rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 0 0 24rpx 24rpx;
  overflow: hidden;
  animation: slideDown 0.3s ease-out;
  flex: 1;
  display: flex;
  flex-direction: column;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.blessings-scroll {
  flex: 1;
  height: 0;
}

.blessing-list {
  padding: 20rpx;
}

/* New Wrapper for Slide Delete */
.blessing-item-wrapper {
  position: relative;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.delete-action-bg {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background: #ef4444;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 40rpx;
  z-index: 1;
  border-radius: 12rpx;
}

.delete-icon {
  color: white;
  font-weight: bold;
  font-size: 28rpx;
}

.blessing-card {
  background: rgba(255, 255, 255, 0.08);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border: 1px solid rgba(254, 202, 202, 0.1);
  position: relative;
  z-index: 2;
  /* Ensure background covers the delete action when not swiped */
  background-color: #3a151b; /* Adjusted to blend with dark theme */
}

/* In wrapper, remove margin to avoid double spacing, let wrapper handle it */
.blessing-item-wrapper .blessing-card {
  margin-bottom: 0;
}

/* Need to ensure the card background is opaque enough to hide the red layer */
.blessing-card {
    /* Using a solid color that matches the visual "glass" effect on dark bg */
    background: #3a151b; /* Adjusted to blend with dark theme */
    /* Or keep rgba but rely on parent bg? No, parent has red layer. */
}

.blessing-content {
  font-size: 28rpx;
  color: #fee2e2;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.blessing-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  margin-bottom: 8rpx;
}

.blessing-type {
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  background: rgba(255, 255, 255, 0.1);
  color: #fca5a5;
}

.tag-mood { color: #fca5a5; background: rgba(252, 165, 165, 0.15); }
.tag-study { color: #93c5fd; background: rgba(147, 197, 253, 0.15); }
.tag-career { color: #fcd34d; background: rgba(252, 211, 77, 0.15); }
.tag-love { color: #f9a8d4; background: rgba(249, 168, 212, 0.15); }

.blessing-time {
  color: #9ca3af;
}

.blessing-stats {
  font-size: 22rpx;
  color: #f87171;
  text-align: right;
}

.loading-more, .no-more, .empty-state {
  text-align: center;
  padding: 20rpx;
  color: #9ca3af;
  font-size: 24rpx;
}

.me-item-desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #fecaca;
}

.blessing-info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  margin-top: 8rpx;
}

.blessing-author {
  color: #fed7aa;
  font-weight: 500;
}

.blessing-stats-text {
  color: #f87171;
}
