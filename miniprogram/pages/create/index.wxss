.create-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0rpx 32rpx 40rpx 32rpx; /* 顶部留白交给 create-header，自身只负责左右与底部内边距 */
  box-sizing: border-box;
  background: radial-gradient(circle at 0% 0%, #f97373 0, #22010a 40%) fixed;
  background-color: #22010a;
  color: #f9fafb;
}

.create-header {
  padding-top: 100rpx; /* 与首页 header / me-header 保持一致的导航栏预留高度 */
  margin-bottom: 32rpx; /* 头部与表单之间的垂直间距 */
}

.create-title {
  font-size: 60rpx; /* 与首页标题 / me-title 保持一致的字号 */
  font-weight: 600;
  letter-spacing: 4rpx; /* 统一的字间距，延续赛博/仪式感 */
}

.create-subtitle {
  margin-top: 8rpx; /* 与首页 subtitle / me-subtitle 相同的间距 */
  font-size: 24rpx; /* 与首页 subtitle / me-subtitle 相同的字号 */
  color: #9ca3af; /* 统一使用中性灰，保持副标题层级一致 */
}

.create-form {
  flex: 1;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 30rpx;
  color: #e5e7eb;
}

.picker-display {
  margin-top: 16rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  background: rgba(15, 23, 42, 0.9);
  box-sizing: border-box; /* 确保 padding 不会撑大宽度 */
}

.form-textarea {
  margin-top: 16rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  min-height: 260rpx;
  max-height: 360rpx;
  background: rgba(15, 23, 42, 0.9);
  color: #f9fafb;
  font-size: 28rpx;
  width: 100%; /* 显式设置宽度为 100% */
  box-sizing: border-box; /* 确保 padding 包含在宽度内 */
}

.textarea-counter {
  margin-top: 8rpx;
  text-align: right;
  font-size: 22rpx;
  color: #9ca3af;
}

.form-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-row-left {
  flex: 1;
}

.create-footer {
  margin-top: 16rpx;
}

.submit-button {
  width: 100%;
  height: 88rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #b91c1c, #f97316);
  box-shadow: 0 20rpx 40rpx rgba(15, 23, 42, 0.6);
  color: #f9fafb;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-button[disabled] {
  opacity: 0.4;
}
