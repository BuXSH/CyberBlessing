.login-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0rpx 48rpx 40rpx;
  box-sizing: border-box;
  background: radial-gradient(circle at 50% 0%, #2c1a4d 0, #0f172a 60%) fixed;
  background-color: #0f172a;
  color: #f9fafb;
}

.login-header {
  padding-top: 120rpx;
  margin-bottom: 64rpx;
  text-align: center;
}

.login-title {
  display: block;
  font-size: 56rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
  text-shadow: 0 0 20rpx rgba(139, 92, 246, 0.5);
}

.login-subtitle {
  display: block;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #94a3b8;
  letter-spacing: 8rpx;
  text-transform: uppercase;
}

.login-form {
  flex: 1;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 24rpx;
  color: #cbd5e1;
  margin-bottom: 16rpx;
  margin-left: 8rpx;
}

.form-input {
  width: 100%;
  height: 96rpx;
  background: rgba(30, 41, 59, 0.8);
  border: 2rpx solid rgba(148, 163, 184, 0.2);
  border-radius: 24rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  color: #f8fafc;
  font-size: 30rpx;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #8b5cf6;
  box-shadow: 0 0 0 4rpx rgba(139, 92, 246, 0.2);
  background: rgba(30, 41, 59, 1);
}

.input-placeholder {
  color: #475569;
}

.login-footer {
  margin-top: 40rpx;
}

.submit-button {
  width: 100%;
  height: 96rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #7c3aed, #4f46e5);
  box-shadow: 0 20rpx 40rpx rgba(124, 58, 237, 0.3);
  color: #ffffff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  letter-spacing: 2rpx;
  transition: all 0.2s;
}

.submit-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-button[disabled] {
  background: #334155;
  color: #64748b;
  box-shadow: none;
  opacity: 1;
}

.register-link {
  margin-top: 40rpx;
  text-align: center;
}

.register-link text {
  font-size: 26rpx;
  color: #94a3b8;
  padding: 20rpx;
}
