<view class="login-page">
  <view class="login-header">
    <text class="login-title">新用户接入</text>
    <text class="login-subtitle">注册终端身份 / 初始化权限</text>
  </view>

  <view class="login-form">
    <view class="form-item">
      <text class="form-label">终端昵称</text>
      <input 
        class="form-input" 
        placeholder="请设置用户名" 
        placeholder-class="input-placeholder"
        data-field="nick"
        bindinput="onInput"
      />
    </view>

    <view class="form-item">
      <text class="form-label">终端代号</text>
      <input 
        class="form-input" 
        placeholder="请设置账号" 
        placeholder-class="input-placeholder"
        data-field="username"
        bindinput="onInput"
      />
    </view>

    <view class="form-item">
      <text class="form-label">访问密钥</text>
      <input 
        class="form-input" 
        password 
        placeholder="请设置密码" 
        placeholder-class="input-placeholder"
        data-field="password"
        bindinput="onInput"
      />
    </view>

    <view class="form-item">
      <text class="form-label">确认密钥</text>
      <input 
        class="form-input" 
        password 
        placeholder="请再次输入密码" 
        placeholder-class="input-placeholder"
        data-field="confirmPassword"
        bindinput="onInput"
      />
    </view>
  </view>

  <view class="login-footer">
    <button class="submit-button" bindtap="onRegister" disabled="{{!canSubmit}}">
      <text>确认注册</text>
    </button>
    
    <view class="register-link" bindtap="onBackToLogin">
      <text>已有身份？返回登录 ></text>
    </view>
  </view>
</view>